.chat(class=activeChat ? "" : 'empty')

  if activeChat
    .chat__header
      .chat__title #{activeChat.props.title}

    .chat__messages
      each message in messages
        .chat-message(class=message.isOwner ? 'chat-message--owner' : '')
          p.chat-message__content #{message.content}
          p.chat-message__time #{message.time}

    form.chat__footer
      input.chat__input(type="text" name="message" placeholder="Сообщение")
      button.chat__submit(type="submit")
        svg(width='13', height='12', viewbox='0 0 13 12', fill='none', xmlns='http://www.w3.org/2000/svg')
          rect(y='5.19995', width='11', height='1.6', fill='white')
          path(d='M7 1L11 6L7 11', stroke='white', stroke-width='1.6')
    

  else
    p Выберите чат чтобы отправить сообщение